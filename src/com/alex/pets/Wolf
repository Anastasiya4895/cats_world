public class Wolf extends Pet {

    public Wolf() {
        super("wolf");
    }

    public void catch (Object object)

    {
        System.out.println("Wolf catch" + object.toString());
        if (object instanof Cat){
        Cat cat = (Cat) object;
        if (cat.isAlive()) {
            cat.kill();
        } else {


            public void eat (Object object){
                System.out.println("Wolf eat " + object.toString());

                if (object instanceof Pig) {
                    Pig pig = (Pig) object;
                    if (pig.isAlive()) {
                        pig.kill();
                    } else {
                        System.out.println("!!! I eat only alive pig !!!");
                    }
                }
            }
        }
    }
    }
